html
    head
        link(href='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.0/semantic.min.css', rel='stylesheet')
        link(href='/css/homepage.css' rel='stylesheet')
        title='Favor'
    body
    div(class='ui blue inverted menu')
        img(src='/images/whale.png' class='ui circular image item whale' id='logo')
        a(class='item' href='/favors') The ALtruist
        div(class='right menu')
            if currentUser
                a(class='item' href=`/users/${currentUser.user_id}`)=`${currentUser.user_name}`
                a(class='item' href='/logout') Logout
            else
                a(class='item' href='/signup') Sign Up
                a(class='item' href='/login') Login
